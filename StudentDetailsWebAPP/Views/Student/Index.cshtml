
@{
    ViewData["Title"] = "Index";
}

<style>
    .clearable {
        position: relative;
    }

        .clearable input {
            padding-right: 30px; /* Space for the clear button */
        }

        .clearable .clear-button {
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%);
            cursor: pointer;
        }

    .invalid-textbox {
        border: 2px solid red;
    }
</style>
<div class="container">
    <div class="col-md-12">
        <h3 class="display-4 text-center text-primary">Student Details</h3>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            <form method="post">
                <label for="PRN">PRN:</label>
                <div class="clearable">
                    <input type="number" class="form-control" id="searchprn">
                    <span class="clear-button" onclick="ClearValues()">✕</span>
                </div>
            </form>
        </div>
       @* <div class="form-group col-md-3">
            <label></label>
            <button class="btn btn-danger" id="clearvalues" >Clear</button>
        </div>*@
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            <label for="StudentName">Student full Name:</label>
            <input type="text" class="form-control" id="studentname" />
        </div>
        <div class="form-group col-md-3">
            <label for="ClassName">Student Address:</label>
            <input type="text" class="form-control" id="studentaddress" />
        </div>
        <div class="form-group col-md-3">
            <label for="ClassName">Parent contact 1:</label>
            <input type="number" class="form-control" id="parentcontact1" maxlength="10"/>
        </div>
        <div class="form-group col-md-3">
            <label for="ClassName">Parent contact 2:</label>
            <input type="number" class="form-control" id="parentcontact2" maxlength="10"/>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            <label for="ClassName">Student EmailID:</label>
            <input type="text" class="form-control" id="studentemailID" />
        </div>
        <div class="form-group col-md-3">
            <label for="ClassName">Class Name:</label>
            @*<input type="text" class="form-control" id="classname" />*@
            <select id="classname" class="form-control"></select>
            <input type="hidden" id="classnameid" />
        </div>
        <div class="form-group col-md-3">
            <label for="examtype">Exam Type:</label>
            @*<input type="text" class="form-control" id="examtype" />*@
            <select id="examtype" class="form-control"></select>
            <input type="hidden" id="examtypeid" />
        </div>
        <div class="form-group col-md-3">
            <label for="rollno">Roll No:</label>
            <input type="number" class="form-control" id="rollno" />
        </div>
    </div>
    <fieldset>
        <legend>Student Marks</legend>
        <div class="row" style="margin-bottom: 15px;">
            <div class="form-group col-md-3">
                <label for="StudentName">Subject:</label>
                @*<input type="text" class="form-control" id="subject" />*@
                <select id="subject" class="form-control">
                    <option> --Select Subject-- </option>
                </select>
                <input type="hidden" id="subjectName" />
            </div>
            <div class="form-group col-md-3">
                <label for="totalmarks">Total Marks:</label>
                <input type="number" class="form-control" id="totalmarks" readonly ="readonly"/>
            </div>
            <div class="form-group col-md-3">
                <label for="obtainedmarks">Obtained Marks:</label>
                <input type="number" class="form-control" id="obtainedmarks" onchange="EnableAddButton();" />
            </div>
            <div class="form-group col-md-1">
                <label for="AddMarks"></label>
                <input type="button" class="form-control btn-primary" id="addmarks" value="Add" />
            </div>
        </div>
        <div class="row">
            <table class="table table-condensed table-bordered">
                <thead>
                    <tr>
                        <td>Subject ID</td>
                        <td>Subject Name</td>
                        <td>Total Marks</td>
                        <td>Marks obtained</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody id="tablelistbody">

                </tbody>
            </table>
        </div>
        <div class="row justify-content-end">
            <input type="button" class="btn-primary col-md-1" id="SaveDetails" value="Submit" />
            <input type="button" class="btn-danger col-md-1 ml-2" style="margin-right:5px;margin-left:10px;" id="ClearDetails" value="Clear" onclick="ClearValues();"/>
        </div>
    </fieldset>
</div>

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
@section Scripts{
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script src="~/js/student.js"></script>
}

